echo 1 | sudo tee /proc/sys/net/ipv4/ip_forward
# To make it permanent, modify the sysctl configuration
sudo nano /etc/sysctl.conf
# Find or add the following line
net.ipv4.ip_forward = 1
sudo sysctl -p
sudo iptables -F
sudo iptables -t nat -F
sudo iptables -P FORWARD ACCEPT
sudo iptables -A FORWARD -i ens34 -o ens36 -j ACCEPT
sudo iptables -A FORWARD -i ens36 -o ens34 -m state --state RELATED,ESTABLISHED -j ACCEPT
sudo iptables -t nat -A POSTROUTING -o ens36 -j MASQUERADE
sudo iptables -L -v -n
sudo iptables -t nat -L -v -n

